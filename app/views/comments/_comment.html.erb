<div class="avatar">
  <% avatar = comment.author_image.blank? ? 'default_avatar.png' : comment.author_image %>
  <%= image_tag avatar, :width => 80, :height => 80 %>
</div>
<div class="comment-body">
  <span class="author-name"><%= author_link(comment) %></span> says:
  <br/>
  <small class="commentmetadata"><a href="#comment-<%= comment.id %>" title=""><%= format_comment_date(comment.created_at) %></a></small>
  <p><%=raw comment.body_html %></p>
</div>
